<!DOCTYPE html>

<html>

    <head>
        <meta name="viewport" content="width=device-width" />
        <meta charset="utf-8" />
        <title>@ViewData["Title"]</title>
        <link rel="icon" href="https://img.icons8.com/color/96/null/cool--v1.png" />
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" /> <!--Bootstrap-->
        <link href="~/css/stylesheet.css" rel="stylesheet" /> <!--Custom CSS-->
    </head>

    <body>

        <!--Navbar-->
        <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
            <a class="navbar-brand" asp-controller="Main" asp-action="Index">
                <img src="https://img.icons8.com/color/96/null/cool--v1.png" width="30" height="30" class="d-inline-block align-top" alt="">
                Justin Brown
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Main" asp-action="GradeCalc">Grade Calculator</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!--Body-->
        <div>
            @RenderBody()
        </div>

        <!--Include Libraries-->
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery/jquery-3.6.3.min.js"></script>

        <!--Grade calculator script-->
        <script src="~/js/gradeCalc.js"></script>

    </body>

</html>
